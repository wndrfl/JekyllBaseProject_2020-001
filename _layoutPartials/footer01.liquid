{% capture time_now %}{{'now' }}{% endcapture %}
{% capture present_year %}{{ 'now' | date: "%Y" }}{% endcapture %}
{% capture start_year %}{{2020}}{% endcapture %}
<footer id="{{ site.name | downcase }}-footer" class="footer">
	<p class="footer__p">
		Â©{% if present_year > start_year %}<time itemprop="copyright" datetime="{{ '2020-01-01' | date_to_xmlschema }}">2020</time> -{% endif %}
		<time itemprop="copyright" datetime="{{ time_now | date_to_xmlschema }}">{{ time_now | date: "%Y" }}</time>
		<a href="{{env}}" title="Visit the landing page" class="footer__button footer__button--copyright">{{site.name}}</a> All rights reserved.
	</p>

	<ul>
		<li><a href="{{env}}" class="footer__button footer__button--full-width">Home</a></li>
		<li><a href="{{env}}/sitemap.xml" class="footer__button footer__button--full-width">Sitemap</a></li>
		<li><a href="{{env}}/404" class="footer__button footer__button--full-width">404</a></li>
		{% for page in site.legal %}
			<li><a href="{{env}}{{page.url}}" class="footer__button footer__button--full-width">{{page.title}}</a></li>
		{% endfor %}
	</ul>

	<a href="#{{ site.name | downcase }}-html" class="footer__to-top-button"></a>

</footer>
